<Window x:Class="educational_practice.windows.OrderInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:educational_practice.windows"
        mc:Ignorable="d"
        Title="OrderInfo" WindowStyle="None" ResizeMode="NoResize" Height="600" WindowStartupLocation="CenterScreen" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock 
             Name="TitleBar"
             Margin="5 0 5 0" 
             FontWeight="Bold" 
             FontSize="20" 
             VerticalAlignment="Center" 
             Grid.Row="0">
            Информация
        </TextBlock>

        <Button 
             Margin="5 0 5 0" 
             Height="20"
             Width="20"
             FontWeight="Bold" 
             FontSize="10" 
             HorizontalAlignment="Right"
             VerticalAlignment="Center" 
             Grid.Row="0"
             Background="Red"
             Click="Exit">
            X
        </Button>

        <Button 
             Margin="5 0 35 0" 
             Height="20"
             Width="100"
             FontWeight="Bold" 
             FontSize="10" 
             HorizontalAlignment="Right"
             VerticalAlignment="Center" 
             Grid.Row="0"
             Background="Orange"
             Click="SignOut">
            Выйти из аккаунта
        </Button>

        <TextBlock 
             FontWeight="Bold" 
             FontSize="50" 
            HorizontalAlignment="Center"
             VerticalAlignment="Center" 
             Grid.Row="1">
            Информация о заявке
        </TextBlock >

        <TextBlock 
            Name="OrderNumber"
            FontWeight="Bold" 
            FontSize="35" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            Grid.Row="2">
            Номер заявки
        </TextBlock >

        <Button 
            Grid.Row="1" 
            Height="30" 
            Width="70"
            Margin="20 0 0 0"
            Background="Red"
            FontWeight="Bold"
            Click="Back"
            HorizontalAlignment="Left">
            Назад
        </Button>

        <Button 
            Click="UpdateOrder"
            Name="EditBut"
            Visibility="Hidden"
            Grid.Row="1" 
            Height="30" 
            Width="70"
            Margin="0 0 20 0"
            Background="Green"
            FontWeight="Bold"
            HorizontalAlignment="Right">
            Изменить
        </Button>

        <TextBlock 
            TextAlignment="Center"
            Name="Disc" 
            FontSize="20" 
            HorizontalAlignment="Left"
            Margin="126,203,0,0" 
            Grid.Row="3" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="183" 
            Width="275" 
            Text="Описание"/>

        <TextBlock 
            TextAlignment="Center"
            Name="Status" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="400,138,0,0" 
            Grid.Row="3" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="275" 
            Text="Статус заявки"/>

        <TextBlock 
            TextAlignment="Center"
            x:Name="Date" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="125,130,0,0" 
            Grid.Row="3" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="275" 
            Text="Дата создания"/>

        <TextBlock 
            TextAlignment="Center"
            x:Name="Model" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="400,5,0,0" 
            Grid.Row="4" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="275" 
            Text="Модель"/>

        <TextBlock 
            TextAlignment="Center"
            x:Name="Type" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="126,5,0,0" 
            Grid.Row="4" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="274" 
            Text="Тип неисправности"/>

        <TextBlock 
            TextAlignment="Center"
            x:Name="Client" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="400,65,0,0" 
            Grid.Row="4" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="275" 
            Text="Клиент"/>

        <TextBlock 
            TextAlignment="Center"
            x:Name="Executor" 
            FontSize="20" 
            HorizontalAlignment="Left" 
            Margin="125,65,0,0" 
            Grid.Row="4" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="60" 
            Width="275" 
            Text="Исполнитель"/>
        
        <TextBlock 
            TextAlignment="Center"
            x:Name="Comment" 
            FontSize="20" 
            HorizontalAlignment="Left"
            Margin="400,203,0,0" 
            Grid.Row="3" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Height="183" 
            Width="275" 
            Text="Комментариев нет"/>
    </Grid>
</Window>
